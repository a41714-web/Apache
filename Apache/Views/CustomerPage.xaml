<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apache.Views.CustomerPage"
             Title="Apache - Shop Now">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Top Bar with Logout -->
        <HorizontalStackLayout Padding="10" Spacing="10">
            <Label Text="Apache Store"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#FF9800"
                   VerticalOptions="Center"/>
            <Label Text="|" TextColor="#CCC" VerticalOptions="Center"/>
            <Label Text="{Binding CartItemCount, StringFormat='Cart: {0} items'}"
                   FontSize="12"
                   VerticalOptions="Center"
                   TextColor="#333"/>
            <Label Text="|" TextColor="#CCC" VerticalOptions="Center"/>
            <Label Text="{Binding CartTotal, StringFormat='${0:F2}'}"
                   FontSize="12"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   TextColor="#FF9800"/>
            <Button Text="Logout"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="#FF6B6B"
                    TextColor="White"
                    FontSize="12"
                    Padding="10,5"
                    HorizontalOptions="EndAndExpand"
                    CornerRadius="5"/>
        </HorizontalStackLayout>

        <BoxView BackgroundColor="#EEE" HeightRequest="1"/>

        <!-- Products List -->
        <Label Text="Available Products" 
               FontSize="16" 
               FontAttributes="Bold"
               Padding="10,5"/>

        <CollectionView ItemsSource="{Binding Products}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedProduct}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#FF9800" CornerRadius="8" Padding="10" HasShadow="True">
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       TextColor="#333"/>
                                <Label Text="{Binding Category, StringFormat='[{0}]'}"
                                       FontSize="11"
                                       TextColor="#999"/>
                            </HorizontalStackLayout>

                            <Label Text="{Binding Description}"
                                   FontSize="12"
                                   TextColor="#666"
                                   LineBreakMode="WordWrap"/>

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#FF9800"/>
                                <Label Text="{Binding Stock, StringFormat='Stock: {0}'}"
                                       FontSize="12"
                                       TextColor="{Binding Stock, Converter={StaticResource StockColorConverter}}"
                                       FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Quantity and Add to Cart Section -->
        <Frame BorderColor="#FF9800" CornerRadius="8" Padding="10" HasShadow="True" Margin="10,10">
            <VerticalStackLayout Spacing="10">
                <Label Text="Selected Product Options"
                       FontAttributes="Bold"
                       FontSize="14"/>

                <Label Text="{Binding SelectedProduct.Name, StringFormat='Product: {0}'}"
                       FontSize="12"
                       TextColor="#333"/>

                <HorizontalStackLayout Spacing="10">
                    <Label Text="Quantity:" VerticalOptions="Center"/>
                    <Stepper Value="{Binding SelectedQuantity}"
                            Minimum="1"
                            Maximum="10"
                            Increment="1"/>
                    <Label Text="{Binding SelectedQuantity}" 
                           VerticalOptions="Center"
                           FontSize="14"
                           FontAttributes="Bold"/>
                </HorizontalStackLayout>

                <Button Text="Add to Cart"
                        Command="{Binding AddToCartCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Place Order Button -->
        <Button Text="Place Order"
                Command="{Binding PlaceOrderCommand}"
                BackgroundColor="#2196F3"
                TextColor="White"
                FontAttributes="Bold"
                Padding="10"
                CornerRadius="8"
                Margin="10,10"/>

        <!-- Loading Indicator -->
        <ActivityIndicator IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          Color="#FF9800"
                          Margin="10"/>

    </VerticalStackLayout>

</ContentPage>
