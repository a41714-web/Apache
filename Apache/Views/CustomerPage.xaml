<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apache.Views.CustomerPage"
             Title="Apache - Shop Now">

    <!-- Visual states to switch between narrow (mobile) and wide (desktop) layouts -->
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="WindowStates">
            <VisualState x:Name="Narrow">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="0" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!-- collapse the right column on narrow screens and show bottom details panel -->
                    <Setter TargetName="RightColumn" Property="Width" Value="0" />
                    <Setter TargetName="DetailsPanelRight" Property="IsVisible" Value="False" />
                    <Setter TargetName="DetailsPanelBottom" Property="IsVisible" Value="True" />
                </VisualState.Setters>
            </VisualState>

            <VisualState x:Name="Wide">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="700" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!-- expand right column on wide windows and show right details panel -->
                    <Setter TargetName="RightColumn" Property="Width" Value="300" />
                    <Setter TargetName="DetailsPanelRight" Property="IsVisible" Value="True" />
                    <Setter TargetName="DetailsPanelBottom" Property="IsVisible" Value="False" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>

    <Grid RowSpacing="8" ColumnSpacing="8" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Top bar -->
            <RowDefinition Height="*" />    <!-- Content -->
            <RowDefinition Height="Auto" /> <!-- Footer / actions -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Grid.Row="0" ColumnSpacing="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <HorizontalStackLayout Spacing="8" VerticalOptions="Center" Grid.Column="0">
                <Label Text="Apache Store"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#FF9800"
                       VerticalOptions="Center" />
                <Label Text="|" TextColor="#CCC" VerticalOptions="Center" />
                <Label Text="{Binding CartItemCount, StringFormat='Cart: {0} items'}"
                       FontSize="12"
                       VerticalOptions="Center"
                       TextColor="#333" />
                <Label Text="|" TextColor="#CCC" VerticalOptions="Center" />
                <Label Text="{Binding CartTotal, StringFormat='${0:F2}'}"
                       FontSize="12"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="#FF9800" />
            </HorizontalStackLayout>

            <Button Text="Logout"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="#FF6B6B"
                    TextColor="White"
                    FontSize="12"
                    Padding="10,5"
                    HorizontalOptions="End"
                    CornerRadius="5"
                    Grid.Column="1" />
        </Grid>

        <BoxView Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="#EEE" HeightRequest="1" VerticalOptions="End" />

        <!-- Main content area: product list + right details panel -->
        <Grid Grid.Row="1" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition x:Name="RightColumn" Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Products list occupies left column -->
            <StackLayout Grid.Column="0" Spacing="8" VerticalOptions="FillAndExpand">
                <Label Text="Available Products"
                       FontSize="16"
                       FontAttributes="Bold"
                       Padding="2" />

                <!-- Make products scrollable to adapt vertically -->
                <ScrollView VerticalOptions="FillAndExpand">
                    <CollectionView ItemsSource="{Binding Products}"
                                    SelectionMode="Single"
                                    SelectedItem="{Binding SelectedProduct}"
                                    VerticalOptions="FillAndExpand"
                                    Margin="0">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#FF9800" CornerRadius="8" Padding="10" HasShadow="True">
                                    <VerticalStackLayout Spacing="8">
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   FontSize="14"
                                                   TextColor="#333" />
                                            <Label Text="{Binding Category, StringFormat='[{0}]'}"
                                                   FontSize="11"
                                                   TextColor="#999" />
                                        </HorizontalStackLayout>

                                        <Label Text="{Binding Description}"
                                               FontSize="12"
                                               TextColor="#666"
                                               LineBreakMode="WordWrap" />

                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#FF9800" />
                                            <Label Text="{Binding Stock, StringFormat='Stock: {0}'}"
                                                   FontSize="12"
                                                   TextColor="{Binding Stock, Converter={StaticResource StockColorConverter}}"
                                                   FontAttributes="Bold" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>

                <!-- Bottom details panel (for narrow/mobile): duplicate of add-to-cart panel and only visible on narrow layouts -->
                <Frame BorderColor="#FF9800" CornerRadius="8" Padding="10" HasShadow="True" Margin="0" IsVisible="False" x:Name="DetailsPanelBottom">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Selected Product Options"
                               FontAttributes="Bold"
                               FontSize="14" />

                        <Label Text="{Binding SelectedProduct.Name, StringFormat='Product: {0}'}"
                               FontSize="12"
                               TextColor="#333" />

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Quantity:" VerticalOptions="Center" />
                            <Stepper Value="{Binding SelectedQuantity}"
                                    Minimum="1"
                                    Maximum="10"
                                    Increment="1" />
                            <Label Text="{Binding SelectedQuantity}"
                                   VerticalOptions="Center"
                                   FontSize="14"
                                   FontAttributes="Bold" />
                        </HorizontalStackLayout>

                        <Button Text="Add to Cart"
                                Command="{Binding AddToCartCommand}"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8" />
                    </VerticalStackLayout>
                </Frame>

            </StackLayout>

            <!-- Right details panel (for wide/desktop): visible on wide windows -->
            <Frame Grid.Column="1" BorderColor="#FF9800" CornerRadius="8" Padding="10" HasShadow="True" Margin="0" x:Name="DetailsPanelRight" IsVisible="False">
                <VerticalStackLayout Spacing="10" VerticalOptions="Start">
                    <Label Text="Selected Product Options"
                           FontAttributes="Bold"
                           FontSize="14" />

                    <Label Text="{Binding SelectedProduct.Name, StringFormat='Product: {0}'}"
                           FontSize="12"
                           TextColor="#333" />

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Quantity:" VerticalOptions="Center" />
                        <Stepper Value="{Binding SelectedQuantity}"
                                Minimum="1"
                                Maximum="10"
                                Increment="1" />
                        <Label Text="{Binding SelectedQuantity}"
                               VerticalOptions="Center"
                               FontSize="14"
                               FontAttributes="Bold" />
                    </HorizontalStackLayout>

                    <Button Text="Add to Cart"
                            Command="{Binding AddToCartCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

        </Grid>

        <!-- Footer / Place Order and Loading -->
        <Grid Grid.Row="2" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Text="Place Order"
                    Command="{Binding PlaceOrderCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="10"
                    CornerRadius="8"
                    Margin="0"
                    Grid.Column="0" />

            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="#FF9800"
                               Grid.Column="1"
                               VerticalOptions="Center" />
        </Grid>

    </Grid>

</ContentPage>
