<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Apache.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Apache"
    xmlns:views="clr-namespace:Apache.Views"
    xmlns:converters="clr-namespace:Apache.Converters"
    Title="Apache">

    <!-- Resources -->
    <Shell.Resources>
        <ResourceDictionary>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:StockColorConverter x:Key="StockColorConverter"/>
            <converters:MultiBoolConverter x:Key="MultiBoolConverter"/>
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Route to Login page (initial page) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <!-- Route to Customer page -->
    <ShellContent
        Title="Customer"
        ContentTemplate="{DataTemplate views:CustomerPage}"
        Route="customer" />

    <!-- Route to Admin page -->
    <ShellContent
        Title="Admin"
        ContentTemplate="{DataTemplate views:AdminPage}"
        Route="admin" />

</Shell>
