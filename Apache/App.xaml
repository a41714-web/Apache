<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Apache"
             xmlns:converters="clr-namespace:Apache.Converters"
             x:Class="Apache.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
            <converters:StockColorConverter x:Key="StockColorConverter" />
            <converters:MultiBoolConverter x:Key="MultiBoolConverter" />
            <converters:SelectedTabConverter x:Key="SelectedTabConverter" />
            <converters:TabVisibilityConverter x:Key="TabVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
